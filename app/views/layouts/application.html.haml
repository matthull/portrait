!!! Strict
%html{html_attrs('en-US')}
  %head
    = stylesheet_link_tag 'application'
    %title .portrait.
  %body
    %div.header
      %div.logo
        %h1 portrait
      - if @current_user
        %div.session
          = "Hello #{@current_user.name}!"
          = link_to 'Log Out', logout_path

    %div.flash
      - if flash[:error]
        %div.error
          %h2
            = flash[:error]
      - if flash[:notice]
        %div.notice
          = flash[:notice]

    #Content= yield
